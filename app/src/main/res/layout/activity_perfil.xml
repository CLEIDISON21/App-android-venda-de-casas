<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_prototipocasas"
    tools:context=".Perfil">

    <View
        android:id="@+id/perfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/container_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/img_perfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_perfil"
        app:layout_constraintStart_toStartOf="@id/perfil"
        app:layout_constraintEnd_toEndOf="@id/perfil"
        app:layout_constraintTop_toTopOf="@id/perfil"
        app:layout_constraintBottom_toBottomOf="@id/perfil"
        />

    <ImageView
        android:id="@+id/icon_perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_perfil"
        app:layout_constraintTop_toBottomOf="@id/perfil"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/nome_perfil_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/icon_perfil"
        app:layout_constraintTop_toBottomOf="@id/perfil" />

    <ImageView
        android:id="@+id/email_perfil_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_email"
        app:layout_constraintTop_toBottomOf="@id/nome_perfil_user"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/text_email_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/icon_perfil"
        app:layout_constraintTop_toBottomOf="@id/nome_perfil_user" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        style="@style/btn_cadastro"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="86dp"
        android:padding="10sp"
        android:layout_marginTop="30dp"
        android:text="Logout"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/text_email_perfil" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Casas"
        style="@style/btn_cadastro"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="86dp"
        android:padding="10sp"
        android:text="Click para ver nossas casas"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="' O melhor caminho para sua casa propria !'"
        app:layout_constraintTop_toBottomOf="@+id/btn_Casas"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>